<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            style="@style/ImageHeaderStyle"
            android:src="@drawable/vietnam"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/btnOpenHostel"
            style="@style/CardStyle">
            <ImageView
                style="@style/ImageStyle"
                android:src="@drawable/hotel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotel"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnOpenATM"
            style="@style/CardStyle">
            <ImageView
                style="@style/ImageStyle"
                android:src="@drawable/atm_machine"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atm"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/btnOpenHospital"
                style="@style/CardStyle">
                <ImageView
                    style="@style/ImageStyle"
                    android:src="@drawable/hospital"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnOpenMetro"
                style="@style/CardStyle">
                <ImageView
                    style="@style/ImageStyle"
                    android:src="@drawable/metro"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metro"/>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>