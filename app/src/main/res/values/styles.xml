<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_style</item>
        <item name="android:padding">@dimen/padding2</item>
        <item name="android:layout_margin">@dimen/margin1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/img_size</item>
        <item name="android:layout_height">@dimen/img_size</item>
    </style>
    <style name="ImageHeaderStyle">
        <item name="android:layout_width">@dimen/image_big_size</item>
        <item name="android:layout_height">@dimen/image_big_size</item>
    </style>

    <style name="Location_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Location_image">
        <item name="android:layout_width">@dimen/image_icon_size</item>
        <item name="android:layout_height">@dimen/image_icon_size</item>
        <item name="android:padding">@dimen/padding1</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
</resources>
